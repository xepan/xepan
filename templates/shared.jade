doctype html
html(lang='en')
  head
    title {page_title}Agile Toolkit{/}
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    link(rel='shortcut icon', href='templates/images/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', href='templates/css/epan.css')
    link(rel='stylesheet', href='templates/css/compact.css')
    meta(name='generator', content='xEpan! - Open Source Intelligent Business Management')
    | 		{$js_include}
    //if IE 8
      link(rel='stylesheet', type='text/css', href='templates/css/ie8.css')
      script(type='text/javascript', src='templates/css/ie8.js')
    script(type='text/javascript').
      $(function(){
      edit_template={edit_template}false{/};
      {$document_ready}
      });
      $(document).on('focusin', function(event) {
      if ($(event.target).closest(".mce-window").length) {
      event.stopImmediatePropagation();
      }
      });
  body(style='{$style}', class='{$class}', component_type='Body ')
    #epan-content-wrapper.epan-sortable-component(component_type='Web Page')
      | {$Content}

    {editor_block}

    //- Top Panel
    #epan-editor-top-panel.epan-editor-top-panel
      .epan-editor-logo.atk-move-left
        i.icon-leaf
      .epan-editor-current-page.atk-move-left
        |Page: <span class='epan-editor-current-page'>{current_page}Current Page Here{/current_page}</span>
      #page-property-btn.atk-move-left.editor-tooltip(title="Page Properties")
        i.icon-cog
      #save-as-snapshot.atk-move-left.editor-tooltip(title="Save And Take Snapshot")
        i.icon-camera
      #epan-save-btn.atk-move-left.editor-tooltip.atk-swatch-yellow(title="Save")
        i.icon-floppy
      #epan-editor-preview.atk-move-left.editor-tooltip(title="Preview")
        i.icon-eye
      #epan-editor-preview-desktop.atk-move-left
        i.icon-desktop
      #epan-editor-preview-laptop.atk-move-left
        i.icon-laptop
      #epan-editor-preview-tablet.atk-move-left
        i.icon-tablet
      #epan-editor-preview-mobile.atk-move-left
        i.icon-mobile
      #epan-editor-logout.atk-move-right.atk-swatch-red
        a(href="index.php?page=logout" title="Logout").editor-tooltip
          i.icon-logout
      #dashboard-btn.atk-move-right.editor-tooltip(title="Admin Dashboard")
        i.icon-home(style="cursor:pointer")
      #epan-editcss-button.atk-move-right.editor-tooltip(title="Common CSS File")
        | CSS
      #template-btn.atk-move-right.editor-tooltip(title="Edit Template of this page")
        | Template
      .atk-move-right.editor-tooltip(title="Show Border")
        input#epan-component-border( type='checkbox' value="Border"  style="margin: 0")
        label(for='epan-component-border' )
          | Border
      .atk-move-right.editor-tooltip( title="Show Extra Space For Easy Drop")
        input#epan-component-extra-padding( type='checkbox' value="Padding" style="margin: 0")
        label(for='epan-component-extra-padding' title="Show Extra Space For Easy Drop")
          | Easy Drop

    //- Bottom Panel
    #epan-editor-bottom-panel.epan-editor-bottom-panel
      | {$editor}

    {/editor_block}
    .epan-editor-shared-div
    
    #atk-growl-holder.atk-growl
  style(type='text/css').
    {$extra_css}
    {$template_css}
  script(src='templates/js/bootstrap.min.js')
  script(type='text/javascript').
    var bootstrapButton = $.fn.button.noConflict() // return $.fn.button to previously assigned value
    $.fn.bootstrapBtn = bootstrapButton            // give $().bootstrapBtn the Bootstrap functionality
    $.support.transition = (function(){
    var thisBody = document.body || document.documentElement,
    thisStyle = thisBody.style,
    support = thisStyle.transition !== undefined || thisStyle.WebkitTransition !== undefined || thisStyle.MozTransition !== undefined || thisStyle.MsTransition !== undefined || thisStyle.OTransition !== undefined;
    return support;
    })();
